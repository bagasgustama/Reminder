
pdfDocument = {
{BEGIN backgroundImage}
	background: {
		image: {$backgroundImage},
		{BEGIN bgWidth}
		imgWidth: {$bgWidth},
		imgHeight: {$bgHeight},
		{END bgWidth}
	},
{END backgroundImage}
	styles: {
				bodycell: {
			fontSize:12,
		},
		headcell: {
			fontSize:12,
			bold: true
		},

	
			},
	defaultStyle: {
		fontSize: 14,
	},
	"content": [
		{BEGIN body}
		{BEGIN embedded_grid}
		{
			text: '{$jscaption product_type}',
		},
		{END embedded_grid}
		{ 
			{BEGIN standalone_page}
			pageBreak: 'before',
			{END standalone_page}
			{BEGIN embedded_grid}
			embeddedPage: true,
			{END embedded_grid}
			layout: {
				hLineWidth: function(i, node) { return 0.1; },
				vLineWidth: function(i, node) { 
					if( node.table.embeddedPage ) {
						return (i === 0 || i === node.table.widths.length) ? 0.1 : 0;
					} else  {
						return 0.1; 
					}
				},
				hLineColor: function(i, node) { return 'gray'; },
				vLineColor: function(i, node) { return 'gray'; },
			},
			table: {
				{BEGIN embedded_grid}
				embeddedPage: true,
				{END embedded_grid}
				
				tableForm: true,
				headerRows: 1 + 1 {BEGIN embedded_grid} -1 {END embedded_grid} ,

				widths: [
														{BEGIN col_grid_0}
					"%",
					{END col_grid_0}
										{BEGIN col_grid_1}
					"%",
					{END col_grid_1}
															],
											heights: [ // first height for header part
					"%",
																		{BEGIN row_grid_0}
							"%",
							{END row_grid_0}
																							 	{BEGIN grid_row}
													{BEGIN row_grid_1}
							"%",
							{END row_grid_1}
																								{BEGIN row_grid_2}
							"%",
							{END row_grid_2}
													{END grid_row}
																								{BEGIN row_grid_3}
							"%",
							{END row_grid_3}
															],
							
				body: [
				{BEGIN standalone_page}
					[
						{
							colSpan: {$formwidth_grid},
							border:[false, false,false,false],
							stack: [

																										
{
	table: {
	
				
		location: 'top',
		
		
		widths: [
								"*", 
					 ],	
		
	
		body: [
				
					[
												{
	cellId: 'c2',
	col:0,
	row:0,
			style: 'cell',
		
		
	//	static colspan/rowspan
		
			
	
	
			"stack": [
		
				
			{"text":"{$jspagetitlelabel product_type print}","hidden":"{$item_hide_print_header}","fontSize":30},
				
				
			{"text":"{$printtabheader_text}","hidden":"{$item_hide_print_subheader}"},
				
		  ],
  "border": [ false, false, false, false ],
          "alignment": 'left',
  },

											],
					]
	}
}
,
								
																										
{
	table: {
	
				
		location: 'above-grid',
		
		
		widths: [
								"*", 
					 ],	
		
	
		body: [
				
					[
												{
	cellId: 'c1',
	col:0,
	row:0,
			style: 'cell',
		
		
	//	static colspan/rowspan
		
			
	
	
			"text": [
		
				
			{"text":"Page %current% of %total%","hidden":"{$item_hide_print_pages}","isHtml":true,"page_indicator":true},
				
		  ],
  "border": [ false, false, false, false ],
          "alignment": 'left',
  },

											],
					]
	}
}
,
															]
						},
					],
				{END standalone_page}

																	

				
					{BEGIN row_grid_0}
				[
												{BEGIN cellblock_grid_headcell_field}
{
	cellId: 'headcell_field',
	col:0,
	row:0,
			style: 'headcell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				
			{"hidden":"{$item_hide_simple_grid_field2}","text":"{$jslabel product_type id_product_type }","bold":true},
				
		  ],
  "border": [ true, true, true, true ],
          "alignment": '{$id_product_type_align}',
  },

{END cellblock_grid_headcell_field}
																			{BEGIN cellblock_grid_headcell_field1}
{
	cellId: 'headcell_field1',
	col:0,
	row:0,
			style: 'headcell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				
			{"hidden":"{$item_hide_simple_grid_field3}","text":"{$jslabel product_type product_type }","bold":true},
				
		  ],
  "border": [ true, true, true, true ],
          "alignment": '{$product_type_align}',
  },

{END cellblock_grid_headcell_field1}
											],
				{END row_grid_0}
									
		{BEGIN grid_row}
	{BEGIN grid_record}
				
						{BEGIN row_grid_1}
				[
												{BEGIN cellblock_grid_cell_field}
{
	cellId: 'cell_field',
	col:0,
	row:0,
			style: 'bodycell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				
			{"hidden":"{$item_hide_simple_grid_field}","text":{$id_product_type_pdfvalue}},
				
		  ],
  "border": [ true, true, true, true ],
          "alignment": '{$id_product_type_align}',
  },

{END cellblock_grid_cell_field}
																			{BEGIN cellblock_grid_cell_field1}
{
	cellId: 'cell_field1',
	col:0,
	row:0,
			style: 'bodycell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				
			{"hidden":"{$item_hide_simple_grid_field1}","text":{$product_type_pdfvalue}},
				
		  ],
  "border": [ true, true, true, true ],
          "alignment": '{$product_type_align}',
  },

{END cellblock_grid_cell_field1}
											],
				{END row_grid_1}
								{BEGIN row_grid_2}
				[
												{BEGIN cellblock_grid_cell_dpreview}
{
	cellId: 'cell_dpreview',
	col:0,
	row:0,
			style: 'bodycell',
		
		
	//	dynamic colspan/rowspan

					{BEGIN colspan_grid_cell_dpreview}
			colSpan: {$colspan_grid_cell_dpreview},
			{END colspan_grid_cell_dpreview}
		
						
	
	
	
			"stack": [
		
				
			 {BEGIN details_group_product}
			{$displayDetailTable_group_product }
		{END details_group_product},
				
		  ],
  "border": [ true, true, true, true ],
          "alignment": 'left',
  },

{END cellblock_grid_cell_dpreview}
																		{ 
				cellId: 'cell_dpreview',
				row:  0,
				col:  1,
				text: ''
			},
							],
				{END row_grid_2}
						{END grid_record}
	{END grid_row}
			
					
								{BEGIN row_grid_3}
				[
												{BEGIN cellblock_grid_footcell_field}
{
	cellId: 'footcell_field',
	col:0,
	row:0,
			style: 'footcell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				'',
	  ],
  "border": [ true, true, true, true ],
          "alignment": 'left',
  },

{END cellblock_grid_footcell_field}
																			{BEGIN cellblock_grid_footcell_field1}
{
	cellId: 'footcell_field1',
	col:0,
	row:0,
			style: 'footcell',
		
		
	//	dynamic colspan/rowspan

		
						
	
	
	
			"text": [
		
				'',
	  ],
  "border": [ true, true, true, true ],
          "alignment": 'left',
  },

{END cellblock_grid_footcell_field1}
											],
				{END row_grid_3}
							
									]
			
			}
		},
		{END body}
	]
}
